<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/offer_thumbnail"
            android:layout_width="175dip"
            android:layout_height="117dip"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/offer_thumbnail"
            android:text="Title"
            android:textColor="@color/offer_title"
            android:textSize="@dimen/offer_title" />

        <TextView
            android:id="@+id/offer_teaser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_title"
            android:layout_toRightOf="@id/offer_thumbnail"
            android:text="Teaser"
            android:textColor="@color/offer_teaser"
            android:textSize="@dimen/offer_teaser" />

        <TextView
            android:id="@+id/offer_payout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_teaser"
            android:layout_toRightOf="@id/offer_thumbnail"
            android:text="Payout"
            android:textColor="@color/offer_payout"
            android:textSize="@dimen/offer_payout" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
